                                    <Label>ДСП шпунтованная</Label>
                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Мтериалы для мебели/Камень.webp" Width="100" Height="100"></Image>
                                    <Label>Камень</Label>
                                </DockPanel>
                            </StackPanel>
                        </Expander>
                    </Grid>
                    <Grid>
                        <Expander>
                            <Expander.Header>
                                <Button>Матриалы для столешницы</Button>
                            </Expander.Header>
                            <StackPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Древесина (бук).webp" Width="100" Height="100"></Image>
                                    <Label>Древесина (бук)</Label>
                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Древесина (дуб).webp" Width="100" Height="100"></Image>
                                    <Label>Древесина (дуб)</Label>
                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Древесина (сосна).webp" Width="100" Height="100"></Image>
                                    <Label>Древесина (сосна)</Label>
                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Древесина (ясень).webp" Width="100" Height="100"></Image>
                                    <Label>Древесина (ясень)</Label>
                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Искуственный камень Кварц-агломерат.webp" Width="100" Height="100"></Image>
                                    <Label>Искуственный камень Кварц-агломерат</Label>
