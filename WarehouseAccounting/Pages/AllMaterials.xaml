                                </DockPanel>
                                <DockPanel>
                                    <Image Source="/Recources/Images/Матриалы для столешницы/Камень искусственный Monte.webp" Width="100" Height="100"></Image>
                                    <Label>Камень искусственный Monte</Label>
                                </DockPanel>
                            </StackPanel>
                        </Expander>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
